{% layout settings.customer_layout %}

<div class="header">
  <div class="w-container">
	  <h1>Register Now</h1>
  </div>
</div>

<div id="template" class="sect sect-sm">
  <div id="customer" class="w-container">
	  <!-- Create Customer -->
	  <div id="create-customer">

	    {% form 'create_customer' %}
	      {{ form.errors | default_errors }}

	      <div class="clearfix large_form">
	        <label for="first_name" class="login">First Name</label>
	        <input type="text" value="" name="customer[first_name]" id="first_name" class="msg w-input" size="30" />
	      </div>

	      <div class="clearfix large_form">
	        <label for="last_name" class="login">Last Name</label>
	        <input type="text" value="" name="customer[last_name]" id="last_name" class="msg w-input" size="30" />
	      </div>

	      <div class="clearfix large_form">
	        <label for="email" class="login">Email Address</label>
	        <input type="email" value="" name="customer[email]" id="email" class="msg w-input" size="30" />
	      </div>

	      <div class="clearfix large_form bot25">
	        <label for="password" class="login">Password</label>
	        <input type="password" value="" name="customer[password]" id="password" class="msg w-input password" size="30" />
	      </div>

	      <div class="action_bottom">
	        <input class="btn w-button" type="submit" value="Create" />
	        <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span>
	      </div>
	    {% endform %}
	  </div><!-- /#create-customer -->
  </div>
</div>
